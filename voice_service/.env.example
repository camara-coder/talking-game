# Voice Service Environment Variables
# Copy this file to .env and fill in your values

# ElevenLabs TTS Configuration
# Get your API key from: https://elevenlabs.io
# Free tier: 10,000 characters/month (~3-5 minutes of audio)
ELEVENLABS_API_KEY=your_api_key_here

# Optional: Override default voice (default: Rachel)
# Available voices: Rachel, Bella, Antoni, Josh, and many more
# ELEVENLABS_VOICE=Rachel

# Optional: Override default model (default: eleven_monolingual_v1)
# Options: eleven_monolingual_v1, eleven_multilingual_v2
# ELEVENLABS_MODEL=eleven_monolingual_v1

# Ollama Configuration (if using different settings)
# OLLAMA_BASE_URL=http://127.0.0.1:11434
# OLLAMA_MODEL=qwen2.5:0.5b-instruct

# Service Configuration (if using different settings)
# SERVICE_HOST=127.0.0.1
# SERVICE_PORT=8008

# Database Configuration (PostgreSQL)
# Local development (with docker-compose):
DATABASE_URL=postgresql+asyncpg://voice_user:voice_pass@localhost:5432/voice_game
# Production (Railway/Heroku): Copy DATABASE_URL from database addon settings
# Example: postgresql+asyncpg://user:password@host:5432/dbname

ENABLE_DB_PERSISTENCE=true  # Set to false to disable database features
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false  # Set to true for SQL query logging (debugging)

# Data Retention (days)
DATA_RETENTION_DAYS=30
CLEANUP_INTERVAL_HOURS=24

# CORS Configuration (for production web client)
# Comma-separated list of allowed origins
# CORS_ORIGINS=https://your-frontend.vercel.app,https://www.your-domain.com

# Public URL (for production deployment)
# PUBLIC_URL=https://your-app.up.railway.app
